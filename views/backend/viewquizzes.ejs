                <th scope="col">QuizName</th>
                <th scope="col">Date Created</th>
                <th scope="col">Total Players</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
               <% let counter = 1 %>
               <% quizzes.forEach((quiz)=>{ %>
                <% let date = quiz.date.toJSON().slice(0,10); %>
