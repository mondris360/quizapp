                    <th scope="row"><%= counter %></th>
                    <td><%= quiz.quizID %> </td>
                    <td><%= quiz.quizName %></td>
                    <td><%= date %></td>
                    <td><%= quiz.totalPlayers %></td>
                    <td></div>
                        <div class="btn-group open">
                          <a class="btn btn-primary btn-sm" href="#"><i class="fa fa-user fa-fw"></i> User</a>
                          <a class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" href="#">
                            <span class="fa fa-caret-down" title="Toggle dropdown menu"></span>
                          </a>
                          <ul class="dropdown-menu">
                            <li data-toggle="modal" data-target="#"><a href="/dashboard/viewquiz/<%= quiz.quizID %>"><i class="fa fa-pencil fa-fw"></i> view</a></li>
                            <!-- <li id="edit"><a href="/dashboard/editquestion/<%= quiz.quizID %>"><i class="fa fa-pencil fa-fw"></i> edit</a></li> -->
                            <li data-toggle="modal" data-target="#scores"><a href="/dashboard/viewscores/<%= quiz.quizID %>"><i class="fa fa-pencil fa-fw"></i> Scores</a></li>
                            <li id="delete"><a href="/dashboard/deletequiz/<%= quiz.quizID %>"><i class="fa fa-trash-o fa-fw"></i> Delete</a></li>
                            <li class="divider"></li>
                          </ul>
                      </div></td>
                </tr>
               <% counter++  %>
               <% }) %>

             
