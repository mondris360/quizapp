<%-  include('layouts/header') %>
<body id="page-top">
        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800"><%= question.quizName %></h1>
          </div>
          <p style="color:<%= messageColor %>"> <%= message %></p>
               <% let counter = 1 %>
               <% quizzes.forEach((question)=>{ %>
                <tr>
                  <div class="card">
                    <div class="card-header">
                     Question <%= counter %>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title"><%= question.question %></h5>
                      <div class="custom-control custom-radio">
                          <input type="radio" class="custom-control-input" id="defaultChecked2" name="<%= question.questionID %>">
                          <label class="custom-control-label" for="defaultChecked2"><%= question.option1 %></label>
                      </div>
                      <div class="custom-control custom-radio">
                          <input type="radio" class="custom-control-input" id="defaultChecked2" name="<%= question.questionID %>">
                          <label class="custom-control-label" for="defaultChecked2"><%= question.option2 %></label>
                      </div>
                      <div class="custom-control custom-radio">
                          <input type="radio" class="custom-control-input" id="defaultChecked2" name="<%= question.questionID %>" >
                          <label class="custom-control-label" for="defaultChecked2"><%= question.option3 %></label>
                      </div>
                      <div class="custom-control custom-radio">
                          <input type="radio" class="custom-control-input" id="defaultChecked2" name="<%= question.questionID %>" checked>
                          <label class="custom-control-label" for="defaultChecked2"><%= question.correctAnswer %></label>
                      </div>
                      <a href="/dashboard/editquestion/<%= question.questionID %>" class="btn btn-primary">Edit Question</a>
                    </div>
                  </div>
               <% counter++  %>
               <% }) %>


    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->


  <!-- view quiz page modal boxes  -->
  <!-- Start of view QUIZ Modal -->
    <!-- Button trigger modal -->
<!-- Button trigger modal -->
     
      <!-- Modal -->
      <div class="modal fade" id="view" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    <!-- End of View quiz Modal Box -->

      <!-- Start of Edit QUIZ Modal -->
        <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    <!-- End of Edit quiz Modal Box -->

      <!-- Start of View QUIZ Scores Modal -->
    <div class="modal fade" id="scores" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    <!-- End of View QUIZ Scores Box -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  
<%-  include('layouts/footer') %>